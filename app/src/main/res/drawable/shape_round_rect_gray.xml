<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--圆角-->
    <corners android:radius="15dp"/>

    <!--渐变色-->
    <gradient />

    <!--内部边距-->
    <padding
        />

    <!--图形的大小-->
    <size
        android:height="30dp"/>

    <!--内部填充色-->
    <solid android:color="#66000000"/>

    <!--描边-->
    <stroke
        android:width="1px"
        android:color="#99FFFFFF"
        />

</shape>